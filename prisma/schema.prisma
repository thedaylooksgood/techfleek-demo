generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model Enquiry {
  id             BigInt    @id @default(autoincrement())
  createdAt      DateTime  @default(now())
  firstName      String
  lastName       String
  email          String
  phone          String
  company        String?
  eventType      String?
  eventTheme     String?
  preferredDate  DateTime? @db.Date
  budgetRange    String?
  location       String?
  description    String?   @db.Text
  services       Json?     // Storing as JSON array for MySQL
  status         String    @default("new")

  @@map("enquiries")
}

model JobApplication {
  id             String    @id @default(uuid())
  createdAt      DateTime  @default(now())
  name           String
  email          String?
  phone          String
  role           String
  resumeUrl      String?   @map("resume_url")
  resumeFilename String?   @map("resume_filename")
  status         String    @default("pending")

  @@map("job_applications")
}
